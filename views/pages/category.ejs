<% layout("layouts/boilerplate.ejs") %>

<div class="filter-box">
  <!-- navigation prev button -->
  <div class="slideshow-controls">
    <button id="prev" class="btn btn-secondary">&lt;</button>
  </div>
  <!-- Filter options -->
  <div id="filters" class="filter-slideshow">
    <a class="nav-link" aria-current="page" href="/listings">
      <div class="filter">
        <i class="fa-solid fa-globe"></i>
        <p>All</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Trending">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Trending</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Cities">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Cities</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Castles">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Castles</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Pools">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Pools</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Mountains">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Mountains</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Camping">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Camping</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Farms">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Farms</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Beaches">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Beaches</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Arctic">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Arctic</p>
      </div>
    </a>
    <a class="nav-link" aria-current="page" href="/listings/category/Play">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Play</p>
      </div>
    </a>
  </div>
  <!-- navigation next buttons -->
  <div class="slideshow-controls">
    <button id="next" class="btn btn-secondary">&gt;</button>
  </div>
</div>

<div class="tax-toggle">
  <div class="form-check-reverse form-switch">
    <input
      class="form-check-input"
      type="checkbox"
      role="switch"
      id="switchCheckDefault"
    />
    <label class="form-check-label" for="switchCheckDefault"
      >Display total after taxes</label
    >
  </div>
</div>

<div class="card-box">
  <% for(let list of categoryListings) {%>
  <div class="card">
    <img
      src="<%= list.image.url %>"
      class="card-img-top"
      alt="<%= list.title %>"
    />
    <div class="card-body">
      <h5 class="card-title"><%= list.title %></h5>
      <p class="card-text"><%= list.location %>, <%= list.country %></p>
      <p class="card-text tax-info">
        &#8377;<%= list.price.toLocaleString("en-IN") %>/night
      </p>
      <a href="/listings/<%= list._id %>" class="btn btn-danger">See More</a>
    </div>
  </div>
  <% } %>category/
</div>

<script src="/js/slideshow.js"></script>
<script src="/js/tax.js"></script>
